@model List<Blog>
@{
    ViewData["Title"] = "Index";
}

                            <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Blog Table</h4>
                  <a class="btn btn-success" asp-controller="Category" asp-action="Create">Create</a>
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                           <th scope="col">#</th>
            <th scope="col">Image</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Setting</th>
                        </tr>
                      </thead>
                      <tbody>
        @foreach (Blog item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>
                    <img src="~/img/@item.Image"/>
                </td>
                <td>@item.Title</td>
                <td>
                        @if (item.Description.Length > 30)
                        {
                            @item.Description.Substring(0,30)
                        }
                        else
                        {
                            @item.Description
                        }
                    </td>
                          <td>
                             <a class="btn btn-danger" asp-controller="Blog" asp-action="Delete" asp-route-id="@item.Id"><i class="mdi mdi-delete"></i></a>
                             <a class="btn btn-primary" asp-controller="Blog" asp-action="Update" asp-route-id="@item.Id"><i class="mdi mdi-table-edit"></i></a>
                             <a class="btn btn-info" asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id"><i class="mdi mdi-account-card-details"></i></a>
                          </td>
                        </tr>
                      }
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
